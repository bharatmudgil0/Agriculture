<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand">Weather</a>
    <form class="d-flex" role="search">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="city" id="city_input">
      <button class="btn btn-outline-success" type="button" id="searchBtn">
        <i class="fa fa-search" aria-hidden="true"></i>
      </button>
      <button class="btn btn-outline-danger" type="button" id="locationBtn">
        <i class="bx bx-target-lock"></i>
      </button>
    </form>
  </div>
</nav>

<div class="row">
  <div class="weather-left">
    <div class="card2">
  <div class="card mb-3 mt-3 w-100 ">
    <div class="row g-0">
      
      <!-- Left Side: Weather Image -->
      <div class="col-md-3 d-flex align-items-center justify-content-center">
        <img src="https://openweathermap.org/img/wn/04d.png" class="img-fluid rounded-start" 
             style="max-height: 100px; object-fit: contain;" alt="Weather Icon">
      </div>

      <!-- Middle Section: Additional Text -->
      <div class="col-md-3 d-flex align-items-center justify-content-center">
        <div class="card-body">
          <h2 class="card-text">28&deg;C</h2>
          <p class="card-text">Wind: 23 km/h</p>
          </div>
      </div>

      <!-- Right Side: Weather Details -->
       
          <div class="col-md-6 d-flex align-items-center justify-content-end">
            <div class="card-body text-end">
              <h4 class="card-title">Now</h4>
              <p class="card-text">28&deg;C</p>
              <p class="card-text">Clear sky</p>
              <p class="card-text">RealFeel® 27°</p>
              <p class="card-text">Wind: 23 km/h</p>
            </div>
          </div>
    </div>
  </div>

    </div>
  </div>
</div>

<div class="col-sm-4 p-3 bg-secondary text-white fw-bold rounded mt-3">
  Today's At
</div>

<div class="highlights">
  <div class="d-flex flex-wrap gap-3"> <!-- Use flexbox and gap for spacing -->
    
    <!-- Air Quality Index Card -->
    <div class="card rounded p-3" style="min-height: 200px; width: 48%; margin-bottom: 10px;">
        <div class="card-body h-100 w-100 d-flex flex-column justify-content-between">
            <h6 class="card-title">Air Quality Index</h6>
            <div class="d-flex justify-content-between align-items-center">
              <i class="fa-regular fa-wind fa-3x"></i>
                <span class="badge bg-danger px-3 py-1">Very Poor</span>
            </div>
            <div class="row flex-grow-1 align-items-center">
                <div class="col-3">
                    <h6>PM2.5</h6>
                    <h4>77.67</h4>
                </div>
                <div class="col-3">
                    <h6>PM10</h6>
                    <h4>90.48</h4>
                </div>
                <div class="col-3">
                    <h6>SO2</h6>
                    <h4>5.72</h4>
                </div>
                <div class="col-3">
                    <h6>NH3</h6>
                    <h4>5.72</h4>
                </div>
            </div>
            <div class="row text-center mt-3">
                <div class="col-3">
                    <h6>CO</h6>
                    <h4>634.19</h4>
                </div>
                <div class="col-3">
                    <h6>NO</h6>
                    <h4>0.23</h4>
                </div>
                <div class="col-3">
                    <h6>NO2</h6>
                    <h4>2.91</h4>
                </div>
                <div class="col-3">
                    <h6>O3</h6>
                    <h4>2.91</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Sunrise & Sunset Card -->
    <div class="card rounded p-3" style="min-height: 200px; width: 48%; margin-bottom: 10px;">
        <div class="card-body h-100 w-100 d-flex flex-column justify-content-center align-items-center">
            <h6 class="card-title">Sunrise & Sunset</h6>
            <div class="row w-100 mt-3">
                <div class="col-6 text-center">
                    <h6>Sunrise</h6>
                    <i class="fa-light fa-sunrise fa-4x"></i>
                    <h4 class="mt-3">06:44 AM</h4>
                </div>
                <div class="col-6 text-center">
                    <h6>Sunset</h6>
                    <i class="fa-light fa-sunset fa-4x"></i>
                    <h4 class="mt-3">06:25 PM</h4>
                </div>
            </div>
        </div>
    </div>

  </div>
</div>

<div class="humi-press">
  <div class="row row-cols-1 row-cols-md-5 g-4 mb-3 mt-1">
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Humditity</h5>
          <i class="fa-light fa-droplet fa-2x"></i>
          <h5 class="card-text text-end" id="humidityVal">___%</h5>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Pressure</h5>
          <i class="fa-light fa-compass fa-2x"></i>
          <h5 class="card-text text-end" id="pressureVal">___hPa</h5>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title ">Wind Speed</h5>
          <i class="fa-light fa-location-arrow fa-2x"></i>
          <h5 class="card-text text-end" id="windSpeedVal">___m/s</h5>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title ">Visibility</h5>
          <i class="fa-light fa-eye fa-2x"></i>
          <h5 class="card-text text-end" id="visibilityVal">___Km</h5>
        </div>
      </div>
    </div>
    <div class="col">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Feel Like</h5>
          <i class="fa-light fa-temperature-list fa-2x"></i>
          <h5 class="card-text text-end" id="feelsVal">___&deg;C</h5>
        </div>
      </div>
    </div>
  </div>
</div>

