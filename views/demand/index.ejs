    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1"> 
        <% for(let crop of allDemands){ %>
            <a href="/listings/demand/<%=crop._id%>" class="listing-link">
            <div class="card col listing-card">
                <img src="<%= crop.image.url %>" class="card-img-top" alt="Image Unavailable" style="height: 20rem;">
                <div class="card-img-overlay">Agriculture</div> <!-- This command is used to write the text on image of the card -->
                <div class="card-body">
                    <p class="card-text">
                    <b><%= crop.title %></b> <br>
                    <b><%= crop.quantity %></b>
                    &#8377; <%= crop.price.toLocaleString("en-IN")%>
                    <i class="tax-info">&nbsp;+18% GST</i>
                    </p>
                </div>
            </div>
        </a>
        <% } %>

